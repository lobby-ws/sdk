{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "gamedev"
    ]
  },
  "include": [
    "apps/**/*",
    "shared/**/*"
  ]
}
